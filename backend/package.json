    "start": "NODE_ENV=development npm run build && node dist/index.js",
    "start:staging": "NODE_ENV=staging npm run build && node dist/index.js",
    "start:prod": "NODE_ENV=production npm run build && node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "staging": "NODE_ENV=staging nodemon --exec ts-node src/index.ts",
    "staging:windows": "dotenv -e .env.staging -- nodemon --exec ts-node src/index.ts",
    "prod": "NODE_ENV=production ts-node src/index.ts",
    "security": "npm audit --audit-level=high"
